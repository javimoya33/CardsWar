<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:background="@drawable/shape_popup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#212F3C">

            <TextView
                android:id="@+id/mensajeCabecera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Texto de Cabecera"
                android:textSize="@dimen/size_letter_toolbar"
                android:gravity="center_vertical|center_horizontal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mensajeNuevaPartida"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/tvMensajeNuevaPartida"
            android:textSize="@dimen/size_letter_toolbar"
            android:gravity="center_vertical|center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="5">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/siNuevaPartida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/butSiNuevaPartida"
                android:textSize="@dimen/size_letter_toolbar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/noNuevaPartida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/butNoNuevaPartida"
                android:textSize="@dimen/size_letter_toolbar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>